- activeClass = -> "active" if @stepIndex is @editor.activeStepIndex()
- click = -> @editor.activeStepIndex @stepIndex
.timeline-step(click=click class=activeClass)
  .icon.inline-left.glyphicon(class=@step.icon)
  .step-details
    .step-type= @step.type
    %textarea.form-control.step-description(value=@step.description)
