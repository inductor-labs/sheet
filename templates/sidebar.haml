%aside.sidebar
  %h3.centered Transform Timeline
  .timeline
    - @steps.each ->
      .timeline-step(@click @class)
        .icon.inline-left.glyphicon(class=@icon)
        .step-details
          .step-type= @type
          .step-description= @description
    .sidebar-footer
      %h4.centered Add transform
      .btn-group
        - @actions.each ->
          .btn.btn-default(type="button" @click @title)
            %span.glyphicon(@class)
