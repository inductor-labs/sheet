%aside.sidebar
  %h3.centered Transform Timeline
  .timeline
    - editor = this
    - @steps.each (step) ->
      - activeClass = -> "active" if step is editor.activeStep()
      - click = -> editor.activeStep step
      .timeline-step(click=click @class class=activeClass)
        .icon.inline-left.glyphicon(class=@icon)
        .step-details
          .step-type= @type
          .step-description= @description
    .sidebar-footer
      %h4.centered Add transform
      .btn-group
        - @actions.each ->
          .btn.btn-default(type="button" @click @title)
            %span.glyphicon(@class)
