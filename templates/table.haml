.container
  .form-group
    %h4 Data Source
    %input.form-control(value=@sourceUrl)

  .form-group
    %h4 Mapping Transformation
    %textarea.form-control(value=@mapTransform)

  .form-group
    %button.btn.btn-default(type="button" click=@applyMapping) Apply Mapping

  %pre= @transform

  %table
    %thead
      %tr
        - each @headers, (header) ->
          %th= header.replace(/[@]/g, "").trim()

    %tbody
      - each @body, (cells) ->
        %tr
          - each cells, (value) ->
            %td= value

  .form-group
    %h4 Reduce Transformation

  .form-group
    %h4 Sum
    %textarea.form-control(value=@reduceTransform)

  %h4 Output
  .pre
    .reduction-output= @reduction
