html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

html, body, .main, .sidebar
  height: 100%

body
  padding: 1em

ul
  margin-bottom: 0
  padding-left: 1.5em

.hidden
  display: none !important

.sidebar
  position: fixed
  top: 1em
  left: 0
  width: 350px
  padding-bottom: 95px
  overflow: auto

.main
  padding-left: 350px

.centered
  text-align: center

.step-type
  font-size: 18px

.icon
  font-size: 24px

.timeline
  padding: 0 1em
  padding-left: 0 // inherit this from the body

.timeline-step
  border-radius: 4px
  cursor: pointer
  position: relative
  padding: 1em

  &:hover
    background-color: #eee

  &.active
    background-color: #dedede
    border: 1px solid #999

.step-details
  padding-left: 36px

.step-description
  color: #888

.inline-left
  position: absolute
  top: 0
  bottom: 0
  left: 0.5em
  margin: auto
  height: 24px

.sidebar-footer
  position: fixed
  bottom: 0
  left: 1em
  width: 335px
  text-align: center
  background-color: #FFF
  border-top: 1px solid #CCC
  padding-bottom: 0.5em

.select-inline
  display: inline-block
  width: auto

.inline-form-container
  display: inline-block
  width: 300px

  .form-control
    display: inline-block
    margin: 0 0.5em
    width: 210px
    vertical-align: middle

